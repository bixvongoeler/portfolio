---
import { siteConfig } from "../config";
import SectionLayout from "./SectionLayout.astro";
import SectionHeader from "./SectionHeader.astro";

// Split aboutMe by newlines to create separate paragraphs
const paragraphs = siteConfig.aboutMe.split('\n').filter(p => p.trim());
---

<SectionLayout id="about">
    <SectionHeader title="About Me" />

    <div class="lg:col-span-8">
        <div
            data-tilt={siteConfig.tiltEffect?.enabled ? "" : undefined}
            data-tilt-max={siteConfig.tiltEffect?.max}
            data-tilt-speed={siteConfig.tiltEffect?.speed}
            data-tilt-perspective={siteConfig.tiltEffect?.perspective}
            class="bg-white dark:bg-slate-800 rounded-lg shadow-sm border border-gray-100 dark:border-slate-700 p-4 sm:p-5 md:p-6 hover:shadow-md dark:hover:shadow-slate-900/50 transition-shadow duration-300"
        >
            <div class="space-y-4">
                {paragraphs.map((paragraph) => (
                    <p class="text-base sm:text-lg md:text-xl leading-relaxed text-gray-600 dark:text-slate-400" set:html={paragraph.trim()} />
                ))}
            </div>
        </div>
    </div>
</SectionLayout>
