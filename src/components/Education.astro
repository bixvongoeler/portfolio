---
import { siteConfig } from "../config";
import SectionLayout from "./SectionLayout.astro";
import SectionHeader from "./SectionHeader.astro";

const hasEducation = siteConfig.education && siteConfig.education.length > 0;

// Parse date range to extract start, end, and any parenthetical suffix
function parseDateRange(dateRange: string) {
    // Match patterns like "2023 - 2027 (Expected)" or "2023 - 2027" or "2019"
    const match = dateRange.match(/^(.+?)\s*-\s*(\d{4})(\s*\(.*\))?$/);
    if (match) {
        return {
            start: match[1].trim(),
            end: match[2],
            suffix: match[3] || ""
        };
    }
    // Single year or other format
    return null;
}
---

{
    hasEducation && (
        <SectionLayout id="education">
            <SectionHeader title="Education" />

            <div class="lg:col-span-8">
                <div class="space-y-8">
                    {siteConfig.education.map((edu) => (
                        <div
                            data-tilt={siteConfig.tiltEffect?.enabled ? "" : undefined}
                            data-tilt-max={siteConfig.tiltEffect?.max}
                            data-tilt-speed={siteConfig.tiltEffect?.speed}
                            data-tilt-perspective={siteConfig.tiltEffect?.perspective}
                            class="bg-white dark:bg-slate-800 rounded-lg shadow-sm border border-gray-100 dark:border-slate-700 p-4 sm:p-5 md:p-6 hover:shadow-md dark:hover:shadow-slate-900/50 transition-shadow duration-300"
                        >
                            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                                <div>
                                    <h3 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-slate-50">
                                        {edu.degree}
                                    </h3>
                                    <p class="text-base sm:text-lg text-[var(--accent-color)]">{edu.school}</p>
                                </div>
                                <span class="text-sm sm:text-base text-gray-700 dark:text-slate-300 mt-2 sm:mt-1">
                                    {(() => {
                                        const parsed = parseDateRange(edu.dateRange);
                                        if (parsed) {
                                            return (
                                                <>
                                                    {parsed.start} - <span class="text-[var(--accent-color)] font-medium">{parsed.end}</span>
                                                    {parsed.suffix && <span class="text-gray-500 dark:text-slate-500">{parsed.suffix}</span>}
                                                </>
                                            );
                                        }
                                        return edu.dateRange;
                                    })()}
                                </span>
                            </div>

                            <ul class="space-y-2">
                                {edu.achievements.map((achievement) => (
                                    <li class="flex items-start">
                                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 dark:bg-slate-500 mt-2 mr-3 flex-shrink-0" />
                                        <span class="text-sm sm:text-base text-gray-600 dark:text-slate-400" set:html={achievement} />
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>
        </SectionLayout>
    )
}
