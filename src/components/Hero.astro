---
import { siteConfig } from "../config";
import GitHubIcon from "../icons/github.svg";
import LinkedInIcon from "../icons/linkedin.svg";
import SocialLink from "./SocialLink.astro";
import EmailButton from "./EmailButton.astro";
---

<div
    id="hero"
    class="relative isolate overflow-x-clip bg-white dark:bg-slate-900 pt-24 pb-8 sm:pt-28 sm:pb-10 md:pt-32 md:pb-12"
>
    <!-- Light mode gradient overlay -->
    <div
        class="absolute -z-10 dark:hidden top-0 left-0 w-full h-[1600px] pointer-events-none"
        style={`background: radial-gradient(ellipse 100vw 1600px at 0% 0%, ${siteConfig.accentColor}50 0%, ${siteConfig.accentColor}35 15%, ${siteConfig.accentColor}20 30%, ${siteConfig.accentColor}08 50%, transparent 70%)`}
    >
    </div>
    <!-- Dark mode gradient overlay -->
    <div
        class="absolute -z-10 hidden dark:block top-0 left-0 w-full h-[1600px] pointer-events-none"
        style={`background: radial-gradient(ellipse 100vw 1600px at 0% 0%, ${siteConfig.darkAccentColor}45 0%, ${siteConfig.darkAccentColor}30 15%, ${siteConfig.darkAccentColor}15 30%, ${siteConfig.darkAccentColor}05 50%, transparent 70%)`}
    >
    </div>

    <!-- Code pattern background -->
    <svg
        aria-hidden="true"
        class="absolute inset-0 -z-10 size-full stroke-gray-200 dark:stroke-slate-700 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
    >
        <defs>
            <pattern id="grid-pattern" x="50%" y={-1} width={200} height={200} patternUnits="userSpaceOnUse">
                <path d="M.5 200V.5H200" fill="none"></path>
            </pattern>
            <pattern id="code-symbols" x="0" y="0" width="400" height="400" patternUnits="userSpaceOnUse">
                <text
                    x="50"
                    y="50"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="24"
                    transform="rotate(-15)">&lt;/&gt;</text
                >
                <text
                    x="150"
                    y="100"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="20"
                    transform="rotate(10)">{}</text
                >
                <text
                    x="250"
                    y="80"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="18"
                    transform="rotate(-5)">=&gt;</text
                >
                <text
                    x="100"
                    y="200"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="22"
                    transform="rotate(15)">[]</text
                >
                <text
                    x="300"
                    y="180"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="20"
                    transform="rotate(-10)">&lt;&gt;</text
                >
                <text
                    x="200"
                    y="250"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="24"
                    transform="rotate(5)">()</text
                >
                <text
                    x="50"
                    y="320"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="18"
                    transform="rotate(-8)">::</text
                >
                <text
                    x="350"
                    y="300"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="22"
                    transform="rotate(12)">==</text
                >
                <text
                    x="150"
                    y="350"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="20"
                    transform="rotate(-15)">++</text
                >
                <text
                    x="250"
                    y="370"
                    class="fill-[var(--accent-color)]"
                    font-family="monospace"
                    font-size="24"
                    transform="rotate(8)">;</text
                >
            </pattern>
        </defs>
        <rect fill="url(#code-symbols)" width="100%" height="100%" opacity="0.2"></rect>
        <rect fill="url(#grid-pattern)" width="100%" height="100%" stroke-width={0}></rect>
    </svg>

    <div class="p-8 sm:p-12 md:p-16 lg:p-24">
        <!-- Desktop layout -->
        <div class="hidden md:grid grid-cols-12 gap-8 lg:gap-16 items-start animate-fade-in">
            <div class="md:col-span-4 flex justify-end">
                <img
                    src={siteConfig.profilePhoto}
                    alt={siteConfig.name}
                    class="w-36 lg:w-44 xl:w-52 h-36 lg:h-44 xl:h-52 rounded-full object-cover border-4 border-white dark:border-slate-800 shadow-lg"
                />
            </div>
            <div class="md:col-span-8">
                <h1 class="font-bold tracking-tight text-gray-800 dark:text-slate-300">
                    <span class="text-4xl lg:text-4xl font-medium">Hi, I'm </span>
                    <span class="text-5xl ml-1 lg:text-5xl text-[var(--accent-color)]">{siteConfig.name}</span>
                </h1>
                <p class="mt-2 text-2xl lg:text-2xl">
                    <span class="text-gray-700 dark:text-slate-400">{siteConfig.fullName}</span>
                    <span class="text-gray-500 dark:text-slate-500">{siteConfig.pronouns}</span>
                </p>
                <p class="mt-1 text-base lg:text-lg text-gray-600 dark:text-slate-400">
                    {siteConfig.title}
                </p>
                <div class="flex flex-wrap gap-3 mt-6">
                    <SocialLink href={siteConfig.social.github} label="GitHub" icon={GitHubIcon} />
                    <SocialLink href={siteConfig.social.linkedin} label="LinkedIn" icon={LinkedInIcon} />
                    <EmailButton email={siteConfig.social.email} />
                </div>
            </div>
        </div>

        <!-- Mobile layout -->
        <div class="md:hidden animate-fade-in">
            <div class="flex items-center gap-4">
                <img
                    src={siteConfig.profilePhoto}
                    alt={siteConfig.name}
                    class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover border-2 border-white dark:border-slate-800 shadow-md"
                />
                <h1 class="font-bold tracking-tight text-gray-800 dark:text-slate-100">
                    <span class="text-xl sm:text-2xl">Hi, I'm </span>
                    <span class="text-2xl sm:text-3xl text-[var(--accent-color)]">{siteConfig.name}!</span>
                </h1>
            </div>
            <p class="mt-4 text-lg sm:text-xl">
                <span class="text-gray-700 dark:text-slate-300">{siteConfig.fullName}</span>
                <span class="text-gray-500 dark:text-slate-500"> - {siteConfig.pronouns}</span>
            </p>
            <p class="mt-1 text-sm sm:text-base text-gray-600 dark:text-slate-400">
                {siteConfig.title}
            </p>
            <div class="flex flex-wrap gap-3 mt-6">
                <SocialLink href={siteConfig.social.github} label="GitHub" icon={GitHubIcon} size="sm" />
                <SocialLink href={siteConfig.social.linkedin} label="LinkedIn" icon={LinkedInIcon} size="sm" />
                <EmailButton email={siteConfig.social.email} size="sm" />
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }
</style>
