---
import GitHubIcon from "../icons/github.svg";

interface Props {
    repo: string;
}

const { repo } = Astro.props;
---

<div class="repo-link absolute bottom-4 right-4 sm:bottom-6 sm:right-6 md:bottom-8 md:right-8 px-3 py-1.5 flex items-center gap-2 bg-gray-50 dark:bg-slate-700 rounded-xl border border-gray-200 dark:border-slate-600 text-gray-700 dark:text-slate-300 text-xs sm:text-sm font-medium shadow-md transition-all duration-300 group-hover:bg-[var(--accent-color)] group-hover:border-white group-hover:text-white">
    <span>
        <span class="group-hover:hidden">{repo}</span>
        <span class="hidden group-hover:inline">view repo for details</span>
    </span>
    <span class="relative w-3.5 h-3.5 sm:w-4 sm:h-4">
        <GitHubIcon class="absolute inset-0 w-full h-full group-hover:opacity-0 transition-opacity duration-300" />
        <svg
            class="absolute inset-0 w-full h-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 17L17 7M17 7H7M17 7V17"
            />
        </svg>
    </span>
</div>

<style>
    .repo-link {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    }

    :global(.group:hover) .repo-link {
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.25), 0 8px 10px -6px rgba(0, 0, 0, 0.2);
    }

    :global(.dark .group:hover) .repo-link {
        box-shadow: 0 10px 25px -5px rgba(255, 255, 255, 0.2), 0 8px 10px -6px rgba(255, 255, 255, 0.15);
    }
</style>
