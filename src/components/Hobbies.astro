---
import { siteConfig } from "../config";
import SectionLayout from "./SectionLayout.astro";
import SectionHeader from "./SectionHeader.astro";

const hasHobbies = siteConfig.hobbies && siteConfig.hobbies.length > 0;
---

{
    hasHobbies && (
        <SectionLayout id="hobbies">
            <SectionHeader title="Hobbies" />

            <div class="lg:col-span-8">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
                    {siteConfig.hobbies.map((hobby) => (
                        <div
                            data-tilt={siteConfig.tiltEffect?.enabled ? "" : undefined}
                            data-tilt-max={siteConfig.tiltEffect?.max}
                            data-tilt-speed={siteConfig.tiltEffect?.speed}
                            data-tilt-perspective={siteConfig.tiltEffect?.perspective}
                            class="bg-white dark:bg-slate-800 rounded-lg shadow-sm border border-gray-100 dark:border-slate-700 p-4 sm:p-5 hover:shadow-md dark:hover:shadow-slate-900/50 transition-shadow duration-300"
                        >
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-slate-50 mb-3">{hobby.name}</h3>
                            <ul class="space-y-1.5">
                                {hobby.description.map((item) => (
                                    <li class="flex items-start">
                                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-[var(--accent-color)] mt-2 mr-2.5 flex-shrink-0" />
                                        <span class="text-sm text-gray-600 dark:text-slate-400">{item}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>
        </SectionLayout>
    )
}
