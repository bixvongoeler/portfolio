---
import { siteConfig } from "../config";
import MailIcon from "../icons/mail.svg";
import LinkedInIcon from "../icons/linkedin.svg";
import GitHubIcon from "../icons/github.svg";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasSkills = siteConfig.skillCategories && Object.keys(siteConfig.skillCategories).length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const hasHobbies = siteConfig.hobbies && siteConfig.hobbies.length > 0;
---

<footer class="relative bg-gray-50 dark:bg-slate-800 border-t border-gray-200 dark:border-slate-700">
    <div class="mx-auto max-w-6xl px-6 py-12 lg:px-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
            <div class="flex flex-col gap-4">
                <h3 class="text-2xl font-bold text-gray-800 dark:text-slate-200">
                    {siteConfig.name}
                </h3>
                <p class="text-base text-gray-600 dark:text-slate-400">
                    {siteConfig.title}
                </p>
                <div class="flex gap-x-6">
                    <a
                        href={`mailto:${siteConfig.social.email}`}
                        aria-label="Email"
                        class="text-gray-600 dark:text-slate-400 transition-colors duration-300 hover:text-[var(--accent-color)]"
                    >
                        <MailIcon class="h-6 w-6" />
                    </a>
                    <a
                        href={siteConfig.social.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="LinkedIn"
                        class="text-gray-600 dark:text-slate-400 transition-colors duration-300 hover:text-[var(--accent-color)]"
                    >
                        <LinkedInIcon class="h-6 w-6" />
                    </a>
                    <a
                        href={siteConfig.social.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="GitHub"
                        class="text-gray-600 dark:text-slate-400 transition-colors duration-300 hover:text-[var(--accent-color)]"
                    >
                        <GitHubIcon class="h-6 w-6" />
                    </a>
                </div>
            </div>

            <div class="hidden md:block flex flex-col md:items-end gap-4">
                <nav class="flex gap-x-8">
                    <a
                        href="#about"
                        class="text-sm text-gray-600 dark:text-slate-400 hover:text-gray-800 dark:hover:text-slate-200 transition-colors"
                    >
                        About
                    </a>
                    {
                        hasEducation && (
                            <a
                                href="#education"
                                class="text-sm text-gray-600 dark:text-slate-400 hover:text-gray-800 dark:hover:text-slate-200 transition-colors"
                            >
                                Education
                            </a>
                        )
                    }
                    {
                        hasExperience && (
                            <a
                                href="#experience"
                                class="text-sm text-gray-600 dark:text-slate-400 hover:text-gray-800 dark:hover:text-slate-200 transition-colors"
                            >
                                Experience
                            </a>
                        )
                    }
                    {
                        hasSkills && (
                            <a
                                href="#skills"
                                class="text-sm text-gray-600 dark:text-slate-400 hover:text-gray-800 dark:hover:text-slate-200 transition-colors"
                            >
                                Skills
                            </a>
                        )
                    }
                    {
                        hasProjects && (
                            <a
                                href="#projects"
                                class="text-sm text-gray-600 dark:text-slate-400 hover:text-gray-800 dark:hover:text-slate-200 transition-colors"
                            >
                                Projects
                            </a>
                        )
                    }
                    {
                        hasHobbies && (
                            <a
                                href="#hobbies"
                                class="text-sm text-gray-600 dark:text-slate-400 hover:text-gray-800 dark:hover:text-slate-200 transition-colors"
                            >
                                Hobbies
                            </a>
                        )
                    }
                </nav>
                <p class="text-sm text-gray-500 dark:text-slate-500">
                    &copy; {new Date().getFullYear()}
                    {siteConfig.name}. All rights reserved.
                </p>
            </div>
        </div>
    </div>

    <!-- Decorative pattern -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <svg aria-hidden="true" class="absolute bottom-0 left-0 w-full h-24 text-gray-100 dark:text-slate-700">
            <pattern id="footer-pattern" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
                <path
                    d="M0 50 Q 25 40, 50 50 T 100 50"
                    stroke="currentColor"
                    stroke-width="0.5"
                    fill="none"
                    opacity="0.4"></path>
            </pattern>
            <rect width="100%" height="100%" fill="url(#footer-pattern)"></rect>
        </svg>
    </div>
</footer>
